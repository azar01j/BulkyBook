@model IEnumerable<Category>
@{

    ViewData["Title"] = "Index";

}


    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">
                Category List
            </h2>
        </div>
        <div class="col-6 text-end"> 
            <a asp-controller="Category" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-cloud-plus"></i> &nbsp; Create New Category
            </a>
        </div>
    </div>

<div>
<table class="table table-bordered table-stripped" style="width:100%">
    <thead>
        <tr>
            <th class="col-3">
                Category Name
            </th>
             <th class ="col-3">
                Display Order
            </th>
            <th class="col-3">
                Created Date
            </th>
            <th class="col-1">
                Edit/Delete
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach(var obj in Model)
        {
            <tr>
                <td class="col-3">
                    @obj.Name
                </td>
                <td class="col-3">
                    @obj.DisplayOrder
                </td>
                <td class="col-3">
                    @obj.CreatedDate
                </td>
                <td class="col-3">
                 <div>
                    <a asp-controller="Category" asp-action="Edit" asp-route-id="@obj.CategoryId" class="btn btn-primary">
                        <i class="bi bi-pencil-square"></i>
                    </a>
                    <a asp-controller="Category" asp-action="Delete" asp-route-id="@obj.CategoryId" class="btn btn-primary">
                        <i class="bi bi-trash"></i>
                    </a>
                </div>
            </tr>
        }
    </tbody>

</table>
</div>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}