@model IEnumerable<Category>
@{

    ViewData["Title"] = "Index";

}


<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">
                Category List
            </h2>
        </div>
        <div class="col-6 text-end"> 
            <a asp-controller="Category" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-cloud-plus"></i> &nbsp; Create New Category
            </a>
        </div>
    </div>

<table class="table table-bordered table-stripped" style="width:100%">
    <thead>
        <tr>
            <th class="col-4">
                Category Name
            </th>
             <th class ="col-4">
                Display Order
            </th>
            <th class="col-4">
                Created Date
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach(var obj in Model)
        {
            <tr>
                <td class="col-4">
                    @obj.Name
                </td>
                <td class="col-4">
                    @obj.DisplayOrder
                </td>
                <td class="col-4">
                    @obj.CreatedDate
                </td>
            </tr>
        }
    </tbody>

</table>
</div>